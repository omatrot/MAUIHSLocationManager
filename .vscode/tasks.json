{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "-t:Run", // Build and deploy to device
        "-f", "net8.0-ios",
        "-p:RuntimeIdentifier=ios-arm64",
        "-p:_DeviceName=:v2:udid=00008110-0016710411C2401E",
        "--configuration", "Debug",
		"--interactive",
        "-v", "diag"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}